bootstrap_go_package {
    name: "soong-librga",
    pkgPath: "android/soong/librga",
    deps: [
        "blueprint",
        "blueprint-pathtools",
        "soong",
        "soong-android",
        "soong-cc",
        "soong-genrule",
    ],
    srcs: [
          "Android.go",
    ],
    pluginFor: ["soong_build"],
}

cc_librga {
   name: "cc_librga_defaults"
}

cc_library_shared {
    name: "librga",
    defaults: [
        "cc_librga_defaults"
    ],

    vendor_available: true,

    header_libs: [
        "gl_headers",
        "libgui_headers",
        "libhardware_headers",
        "libbinder_headers",
        "liblog_headers",
    ],
    srcs: [
        "core/RockchipRga.cpp",
        "core/GrallocOps.cpp",
        "core/NormalRga.cpp",
        "core/NormalRgaApi.cpp",
        "core/RgaApi.cpp",
        "core/RgaUtils.cpp",
        "core/rga_sync.cpp",
        "im2d_api/im2d_common.cpp",
        "im2d_api/im2d.cpp",
    ],
    export_include_dirs: [
        "include",
        "core"
    ],
    include_dirs: [
        "external/libdrm",
        "external/libdrm/include/drm",
        "frameworks/native/libs/nativewindow/include",
        "system/core/libsync",
        "system/core/libsync/include",
    ],

    shared_libs: [
        "liblog",
        "libui",
        "libutils",
        "libcutils",
        "libhardware",
        "libsync",
    ],

    cflags: ["-Wno-error"] +["-DLOG_TAG=\"librga\""] + ["-DRK_DRM_GRALLOC=1"] + ["-DANDROID_8"] + ["-DANDROID_7_DRM"] + ["-DUSE_AHARDWAREBUFFER=1"] + ["-DANDROID"],
}
