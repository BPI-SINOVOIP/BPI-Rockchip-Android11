cc_library {
    name: "libnetdbpf",
    vendor_available: false,
    host_supported: false,
    srcs: [
        "BpfNetworkStats.cpp"
    ],
    shared_libs: [
        "libbase",
        "libbpf_android",
        "liblog",
        "libnetdutils",
    ],
    export_include_dirs: ["include"],
    defaults: ["netd_defaults"],
    sanitize: {
        cfi: true,
    },
}

cc_test {
    name: "libnetdbpf_test",
    test_suites: ["device-tests"],
    require_root: true,
    srcs: [
        "BpfNetworkStatsTest.cpp",
    ],
    defaults: ["netd_defaults"],
    static_libs: ["libgmock"],
    shared_libs: [
        "libbase",
        "libbpf_android",
        "liblog",
        "libnetdbpf",
        "libnetdutils",
        "libutils",
    ],
}
