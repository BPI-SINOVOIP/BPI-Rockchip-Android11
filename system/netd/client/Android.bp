cc_library {
    name: "libnetd_client",
    srcs: [
        "FwmarkClient.cpp",
        "NetdClient.cpp",
    ],
    header_libs: [
        "dnsproxyd_protocol_headers", // NETID_USE_LOCAL_NAMESERVERS
        "libnetd_client_headers",
        "libbase_headers", // for unique_fd.h
        "libnetd_resolv_headers",
    ],
    export_header_lib_headers: ["libnetd_client_headers"],
    include_dirs: [
        "system/netd/libnetdutils/include",
    ],
    defaults: ["netd_defaults"],
    sanitize: {
        cfi: true,
    },
}

cc_test {
    name: "netdclient_test",
    srcs: [
        "NetdClientTest.cpp",
    ],
    defaults: ["netd_defaults"],
    test_suites: ["device-tests"],
    include_dirs: [
        "system/netd/include",
    ],
    header_libs: [
        "libnetd_resolv_headers",
    ],
    static_libs: [
        "libgmock",
        "libbase",
        "libnetd_client",
    ],
    sanitize: {
        address: true,
        recover: [ "all" ],
    },
}
