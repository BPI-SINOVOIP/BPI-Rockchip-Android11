//
// bpfLoad binary
//
cc_binary {
    name: "bpfloader",

    defaults: ["bpf_defaults"],
    cflags: [
        "-Wall",
        "-Werror",
        "-Wthread-safety",
    ],
    sanitize: {
        integer_overflow: true,
    },
    clang: true,
    shared_libs: [
        "libcutils",
        "libbpf_android",
        "libbase",
        "liblog",
        "libnetdutils",
        "libbpf",
    ],
    srcs: [
        "BpfLoader.cpp",
    ],

    init_rc: ["bpfloader.rc"],

    required: [
        "time_in_state.o"
    ],

}
