cc_library_shared {
    name: "libkeystore-engine",

    srcs: [
        "android_engine.cpp",
        "keystore_backend_binder.cpp",
    ],

    cflags: [
        "-fvisibility=hidden",
        "-Wall",
        "-Werror",
    ],

    shared_libs: [
        "libbinder",
        "libcrypto",
        "libcutils",
        "libhidlbase",
        "libkeystore_aidl",
        "libkeystore_binder",
        "libkeystore_parcelables",
        "liblog",
        "libbase",
        "libutils",
    ],

}

// This builds a variant of libkeystore-engine that uses a HIDL HAL
// owned by the WiFi user to perform signing operations.
cc_library_shared {
    name: "libkeystore-engine-wifi-hidl",

    srcs: [
        "android_engine.cpp",
        "keystore_backend_hidl.cpp",
    ],

    cflags: [
        "-fvisibility=hidden",
        "-Wall",
        "-Werror",
        "-DBACKEND_WIFI_HIDL",
    ],

    shared_libs: [
        "android.system.wifi.keystore@1.0",
        "libcrypto",
        "liblog",
        "libhidlbase",
        "libcutils",
        "libutils",
    ],

    vendor: true,
}
