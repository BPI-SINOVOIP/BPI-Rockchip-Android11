<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/mode_options_height"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/manual_focus_seek_padding"
    android:paddingBottom="@dimen/manual_focus_seek_padding"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:background="@drawable/ic_manual_focus_tip_vertical"
    android:gravity="center"
    android:visibility="gone" >

    <com.android.camera.widget.VerticalSeekBar
        android:id="@+id/manual_focus" 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:minHeight="36dip"
        android:maxHeight="36dip"
        android:max="100"
        android:thumb="@drawable/manual_focus_slider"
        android:progressDrawable="@android:color/transparent"
        android:background="@drawable/ic_manual_focus_progress_vertical" />

</LinearLayout>
