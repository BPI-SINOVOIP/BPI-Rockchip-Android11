java_test_host {
    name: "layoutlib-create-tests",

    // Only compile source java files in this lib.
    srcs: ["src/**/*.java"],

    java_resource_dirs: ["res"],

    libs: [
        "layoutlib_create",
        "junit",
        "hamcrest",
    ],
    static_libs: ["asm-6.0"],

    // Copy the jar to DIST_DIR for sdk builds
    dist: {
        targets: [
            "sdk",
            "win_sdk",
        ],
    },
}

java_library_host {
    name: "mock_android",

    srcs: ["res/mock_data/**/*.java"],
    java_resource_dirs: ["res/mock_data"],
}
