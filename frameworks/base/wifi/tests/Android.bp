// Make test APK
// ============================================================

android_test {
    name: "FrameworksWifiApiTests",

    defaults: ["framework-wifi-test-defaults"],

    srcs: ["**/*.java"],

    jacoco: {
        include_filter: ["android.net.wifi.*"],
        // TODO(b/147521214) need to exclude test classes
        exclude_filter: [],
    },

    static_libs: [
        "androidx.test.rules",
        "core-test-rules",
        "guava",
        "mockito-target-minus-junit4",
        "net-tests-utils",
        "frameworks-base-testutils",
        "truth-prebuilt",
    ],

    libs: [
        "android.test.runner",
        "android.test.base",
    ],

    test_suites: [
        "device-tests",
        "mts",
    ],
}
