DEBUGGER=${DEBUGGER:-}
FUZZER=$1
shift
TESTCASE="/testcase"

if [ ! -f $TESTCASE ]; then
  echo "Error: $TESTCASE not found, use: docker run -v <path>:$TESTCASE ..."
  exit 1
fi

export PATH=$OUT:$PATH
cd $OUT
$DEBUGGER $OUT/$FUZZER $FUZZER_ARGS $@ $TESTCASE

