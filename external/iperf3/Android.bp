cc_binary {
    name: "iperf3",
    srcs: [
        "src/*.c",
    ],
    exclude_srcs: [
        "src/t_*.c",
    ],
    cflags: [
        "-Wno-unused-parameter",
        "-Wno-unused-variable",
        // https://github.com/esnet/iperf/pull/855
        "-Wno-format",
        "-Wno-constant-conversion",
    ],
}
