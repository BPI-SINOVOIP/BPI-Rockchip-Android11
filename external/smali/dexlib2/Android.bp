// build dexlib2 jar
// ============================================================

java_library_host {
    name: "dexlib2",

    srcs: [
        "src/main/java/**/*.java",
    ],

    static_libs: [
        "commons-cli-1.2",
        "guava",
        "jcommander",
        "jsr305",
    ],
}

java_library_host {
    name: "dexlib2-no-guava",

    srcs: [
        "src/main/java/**/*.java",
    ],

    libs: [
        "guava",
    ],

    static_libs: [
        "commons-cli-1.2",
        "jcommander",
        "jsr305",
    ],
}

java_library_host {
    name: "dexlib2-no-guava-no-cli",

    srcs: [
        "src/main/java/**/*.java",
    ],

    libs: [
        "guava",
        "commons-cli-1.2",
    ],

    static_libs: [
        "jcommander",
        "jsr305",
    ],
}