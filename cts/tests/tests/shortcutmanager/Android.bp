android_test {
    name: "CtsShortcutManagerTestCases",
    defaults: [
        "cts_defaults",
        "CtsShortcutManagerDefaults",
    ],
    libs: [
        "android.test.runner.stubs",
        "android.test.base.stubs",
    ],
    srcs: ["src/**/*.java"],
    test_suites: [
        "cts",
        "vts10",
        "general-tests",
    ],
}

